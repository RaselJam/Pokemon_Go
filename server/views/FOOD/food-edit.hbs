<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar Food</h1>
        </div>

        <div class="col-md-6">

            <form action="#{{food.id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" value="{{food.name}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Descripci√≥n</label>
                    <input name="description" type="text" class="form-control" value="{{food.description}}">
                </div>
                <div class="form-group">
                    <label for="amount-input">Speed</label>
                    <input name="amount" type="number" class="form-control" value="{{food.amount}}">
                </div>
                <button type="submit" class="btn btn-dark">Editar Food</button>
                <a href="/" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>