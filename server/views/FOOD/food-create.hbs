<div class="container">
{{name}}
    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">NEW FOOD</h1>
        </div>

        <div class="col-md-6">

            <form action="/foods/create" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="description-input">Descripci√≥n</label>
                    <input name="description" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="amount-input">Amount</label>
                    <input name="amount" type="number" class="form-control">
                </div>
                 <div class="form-group">
                    <label for="lat">Latitude</label>
                    <input name="lat" type="text" class="form-control" value="{{location.coordinates.[0]}}">
                </div>
                <div class="form-group">
                    <label for="long">Longitude</label>
                    <input name="long" type="text" class="form-control" value="{{location.coordinates.[1]}}">
                </div>
                <button type="submit" class="btn btn-dark">Crear Food</button>
                <a href="/" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>