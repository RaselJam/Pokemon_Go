<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar Pokemon</h1>
        </div>

        <div class="col-md-6">

            <form action="#{{pokemon.id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" value="{{pokemon.name}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Descripci√≥n</label>
                    <input name="description" type="text" class="form-control" value="{{pokemon.description}}">
                </div>
                <div class="form-group">
                    <label for="speed-input">Speed</label>
                    <input name="speed" type="number" class="form-control" value="{{pokemon.speed}}">
                </div>
                <div class="form-group">
                    <label for="attack-input">Attack</label>
                    <input name="attack" type="number" class="form-control" value="{{pokemon.attack}}">
                </div>
                <div class="form-group">
                    <label for="life-input">Life</label>
                    <input name="life" type="number" class="form-control" value="{{pokemon.life}}">
                </div>
                 <button type="submit" class="btn btn-dark">Editar Pokemon</button>
                <a href="/" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>